# Original maintainer: Jerome Leclanche <jerome.leclanche+arch@gmail.com>

_pkgname=lxrandr-qt
# pkgname=$_pkgname-git
pkgname=$_pkgname
pkgver=0.5
pkgrel=1
pkgdesc="LXQt monitor configuration."
arch=('i686' 'x86_64')
url="http://www.lxde.org"
license=('GPL2')
groups=('lxqt')
depends=('qt4>=4.6')
makedepends=('git' 'cmake>=2.6')
provides=($_pkgname)
conflicts=($_pkgname)
source=("git://github.com/lxde/$_pkgname.git")
sha256sums=('SKIP')
_gitname=$_pkgname

pkgver() {
    cd "$srcdir/$_gitname"
    printf "%s.r%s.%s.%s" "$pkgver" "$(git rev-list --count HEAD)" "$pkgrel" "$(git rev-parse --short HEAD)"
}

build() {
    cd "$srcdir/$_gitname"
    mkdir -p build
    cd build
    cmake -DCMAKE_INSTALL_PREFIX=/usr  ..
    make
}

package() {
    cd "$srcdir/$_gitname"
    cd build
    make DESTDIR="$pkgdir" install
}
